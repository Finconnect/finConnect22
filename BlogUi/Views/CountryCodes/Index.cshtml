@model IEnumerable<BlogUi.Models.CountryCode>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ctryCode)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ctryNm)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ctryCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ctryNm)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ctryId">Edit</a> |
