@model IEnumerable<BlogUi.Models.Currency>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ccyCd)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ccyNm)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ccyExch)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ccyCd)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ccyNm)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ccyExch)
            </td>
